                "method": "get",
                "requestParameters": [
                    {
                        "type": "query",
                        "parameters": [
                            "client_id",
                            "quote",
                            "author",
                            "fontSize",
                            "quoteFont",
                            "quoteFontColor",
                            "authorFont",
                            "authorFontColor",
                            "enableHighlight",
                            "highlightColor",
                            "bgType",
