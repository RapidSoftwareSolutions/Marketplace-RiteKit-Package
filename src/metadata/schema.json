            "vendorRequest": {
                "url": "https:\/\/api.ritekit.com\/v1\/stats\/auto-hashtag",
                "method": "get",
                "requestParameters": [
                    {
                        "type": "query",
                        "parameters": [
                            "post",
                            "client_id"
                        ]
                    }
                ]
            },
            "callbacks": [
                {
                    "name": "error",
                    "info": "Error"
